<h1>Welcome to Seattle</h1>
<div id="featured_locations">
  <h3>Popular Attractions</h3>
  <div class="row featured">
    <% @locations.each do |location| %>
      <div class="col-md-3">
        <% if location.main_attraction %>
          <a href="/location/<%=location.id%>"><div>
            <h4><%=location.name%></h4>
              <br>
              <img id="main_image" src="<%=location.main_image%>" alt="<%= location.name %>">
            </div>
          </a>
        <% end %>
      </div>
    <% end %>
  </div>
  <br>
  <br>
</div>
